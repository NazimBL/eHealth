<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/another_one"
    tools:context="com.example.dell.hackit.Home">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Profile"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/profile"
        android:textSize="20dp"
        android:background="#6C3483"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Health Monitor"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/control"
        android:background="#CF71C4"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Reminder"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="20dp"
        android:id="@+id/reminder"

        android:background="#D7BDE2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Emergency Calls"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/sos"
        android:textSize="20dp"
        android:background="#AAB1D7"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Help"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/setting"
        android:textSize="20dp"
        android:background="@color/home"
        />


</LinearLayout>

</FrameLayout>
